---
import "@joblist/components/style"
import SEO from '../components/SEO.astro';
import { initializeDataCache } from '../utils/git-data.js';

// Initialize data cache early in the build process
await initializeDataCache();

interface Props {
	title?: string;
	description?: string;
	companyId?: string;
	companyData?: any;
}

const {
	title = 'joblist.today',
	description = 'joblist.today is a collaborative directory to explore companies currently recruiting and search open job positions around the world',
	companyId,
	companyData
} = Astro.props;
---

<!doctype html>
<html lang="en" joblist-layout>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO 
			title={title} 
			description={description} 
			url={Astro.url.href} 
			keywords={['jobs', 'careers', 'hiring', 'companies', 'recruitment', 'job search']}
			companyId={companyId}
			companyData={companyData}
		/>
	</head>
	<body>
    <joblist-layout>
	    <joblist-menu favicon="true" show-default="true"></joblist-menu>
	    <joblist-page>
		    <slot />
	    </joblist-page>
    </joblist-layout>

    <joblist-umami-script></joblist-umami-script>
    
    <script>
    import "@joblist/components";
    import "../js/index.js"
    </script>
	</body>
</html>

<style>
.content {
	display: flex;
	flex-direction: column;
	flex-grow: 1;
}
section + section {
	margin-top: var(--s);
}

joblist-date {
	font-style: italic;
}
</style>
